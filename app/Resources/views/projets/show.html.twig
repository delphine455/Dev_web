{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1>Projet</h1>

    <table  class="table table-bordered">
        <tbody>
            <tr>
                <th>{{ 'id'|trans }}</th>
                <td>{{ projet.id }}</td>
            </tr>
            <tr>
                <th>{{ 'nom'|trans }}</th>
                <td>{{ projet.nom }}</td>
            </tr>
            <tr>
                <th>{{ 'description'|trans }}</th>
                <td>{{ projet.description }}</td>
            </tr>
            <tr>
                <th>{{ 'datedebut'|trans }}</th>
                <td>{% if projet.dateDebut %}{{ projet.dateDebut|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>{{ 'datefin'|trans }}</th>
                <td>{% if projet.dateFin %}{{ projet.dateFin|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>{{ 'client'|trans }}</th>
                <td>{{ projet.client }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li class="btn btn-success">
            <a href="{{ path('projets_index') }}">{{ 'backlist'|trans }}</a>
        </li>
        <li  class="btn btn-light">
            <a href="{{ path('projets_edit', { 'id': projet.id }) }}">{{ 'edit'|trans }}</a>
        </li>
        <li class="btn btn-link">
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="{{ 'delete'|trans }}">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
