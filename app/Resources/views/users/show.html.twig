{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
    <h1> {{ 'user'|trans }} </h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th> {{ 'id'|trans }} </th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th> {{ 'nom'|trans }} </th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th> {{ 'prenom'|trans }} </th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th> {{ 'dateNaissance'|trans }} </th>
                <td>{% if user.dateNaissance %}{{ user.dateNaissance|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th> {{ 'email'|trans }} </th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th> {{ 'role'|trans }} </th>
                <td>
                    {% for role in user.roles %}
                        {{ role }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th> {{ 'competences'|trans }} </th>
                <td>{{ user.competences }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li class="btn btn-success">
            <a href="{{ path('users_index') }}"> {{ 'backlist'|trans }} </a>
        </li>
        <li class="btn btn-light">
            <a href="{{ path('users_edit', { 'id': user.id }) }}"> {{ 'useredit'|trans }} </a>
        </li>
        <li class="btn btn-link">
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="{{ 'delete'|trans }}">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
